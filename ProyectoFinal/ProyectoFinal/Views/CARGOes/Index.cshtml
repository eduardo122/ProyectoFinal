@model IEnumerable<ProyectoFinal.Models.CARGO>

@{
    ViewBag.Title = "Index";
}

<h2 class="display-4 text-info">Cargos</h2>

<p>
    @Html.ActionLink("Agregar un nuevo cargo", "Create", "", new { @class = "btn btn-primary text-light" })
</p>
<table class="table">
    <tr class="bg-info">
        <th>
            @Html.DisplayName("Nombre del cargo")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo1)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-success btn-sm text-white" }) ||
                @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm text-white" })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Volver", "Mantenimientos", "Home", "", new { @class = "btn btn-primary" })
</div>
