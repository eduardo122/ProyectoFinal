@model IEnumerable<ProyectoFinal.Models.EMPLEADO>

@{
    ViewBag.Title = "Index";
}

<h2 class="display-4 text-info">Empleados</h2>

<p>
    @Html.ActionLink("Agregar un nuevo empleado", "Create", "", new { @class = "btn btn-primary text-light" })
</p>
<table class="table border-1">
    <tr>
        <th class="bg-info text-white text-center">
            @Html.DisplayName("Codigo")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Nombre")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Apellidos")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Telefono")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Fecha de ingreso")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Salario")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Estatus")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Cargo")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Departamento")
        </th>
        <th class="bg-info text-center text-white">
            @Html.DisplayName("Acciones")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo_empleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CARGO1.Cargo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DEPARTAMENTO1.nombre)
            </td>
            <td>
                <div class=" container row">
                    <div class="row d-inline">
                        <div class="col-4 mb-2">  @Html.ActionLink("Actualizar", "Edit", new { id = item.id }, new { @class = "btn btn-success btn-sm text-white" })</div>
                        <div class="col-4 mb-2 ">@Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "btn btn-warning btn-sm text-white" })</div>
                        <div class="col-4 ">  @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm text-white" })</div>

                    </div>



                </div>
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Volver", "Mantenimientos", "Home", "", new { @class="btn btn-primary"})
</div>

