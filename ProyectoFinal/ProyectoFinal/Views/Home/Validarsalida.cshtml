@using ProyectoFinal.Models
@model EMPLEADO
@{
    ViewBag.Title = "Validarsalida";
}

<h2>Validarsalida</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)


        <div class="form-group">
            @Html.Label("Estatus", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.estatus, new SelectList(Enum.GetValues(typeof(Estatus))), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.estatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Validar Salida" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}